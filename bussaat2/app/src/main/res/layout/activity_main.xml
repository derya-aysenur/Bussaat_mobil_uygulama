<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/otobus" />

        <View
            android:id="@+id/cizgi"
            android:layout_width="330dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="425dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/yol"
                android:layout_width="249dp"
                android:layout_height="367dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="63dp"
                android:layout_marginBottom="19dp"
                android:paddingTop="30dp"
                android:paddingBottom="40dp"

                app:srcCompat="@drawable/yol" />

            <ImageView
                android:id="@+id/bukart_bilet_tipi"
                android:layout_width="77dp"
                android:layout_height="76dp"
                android:layout_alignEnd="@+id/yol"
                android:layout_alignBottom="@+id/yol"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="93dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="159dp"
                android:layout_marginBottom="288dp"
                app:srcCompat="@drawable/kart_tipi" />

            <ImageView
                android:id="@+id/duraksaatleri"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignStart="@+id/yol"
                android:layout_alignBottom="@+id/yol"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="142dp"
                android:layout_marginTop="127dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="199dp"
                app:srcCompat="@drawable/duraksaatleri" />

            <ImageView
                android:id="@+id/kartbasvuru"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/yol"
                android:layout_alignEnd="@+id/yol"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="95dp"
                android:layout_marginTop="179dp"
                android:layout_marginEnd="154dp"
                android:layout_marginBottom="127dp"
                app:srcCompat="@drawable/kartbasvurubilgileri" />

            <ImageView
                android:id="@+id/yolculukkurallari"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignStart="@+id/yol"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="139dp"
                android:layout_marginEnd="93dp"
                android:layout_marginBottom="31dp"
                app:srcCompat="@drawable/yolculukkurallar" />

        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>